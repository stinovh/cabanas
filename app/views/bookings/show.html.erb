<div id="wrapper">
        <%= render partial: "shared/side_bar" %>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <table class="table table-hover table-striped table-responsive">
                        <thead>
                          <tr>
                            <th>
                              Cabana
                            </th>
                            <th>
                              Country
                            </th>
                            <th>
                              To
                            </th>
                            <th>
                              From
                            </th>
                            <th>
                              Total price
                            </th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @bookings.each do |b| %>
                            <tr>
                              <td><%= b.property.name %></td>
                              <td><%= b.property.country %></td>
                              <td><%= b.start_date %></td>
                              <td><%= b.end_date %></td>
                              <td> <%= @price = (b.end_date - b.start_date) * b.property.price_night %> euro</td>
                              <td><%= link_to "Cancel booking", booking_path(b), method: "delete" , class: "btn btn-primary" %></td>
                              <% @total += @price %>
                            </tr>
                          <% end %>
                          <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>Total</td>
                            <td>
                              <%= @total %> euro
                            </td>
                          </tr>
                        </tbody>
                      </table>
                      </div>
                    </div>
                  </div>
                  <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Menu Toggle Script -->
<script>
$("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
});
</script>
